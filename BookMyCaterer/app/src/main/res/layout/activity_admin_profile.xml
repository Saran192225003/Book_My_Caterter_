<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- Profile Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#2A6B93"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:alpha=".75"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <!-- Title -->
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Book My Caterer"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />
        <ImageView
            android:id="@+id/logoutIcon1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/logout"
            android:contentDescription="Logout"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <!-- Admin Details Section -->
    <TextView
        android:id="@+id/adminNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/adminName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Name"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/adminNameLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/adminEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/adminName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/adminEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="admin@example.com"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/adminEmailLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/adminPhoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/adminEmail"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/adminPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="123-456-7890"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/adminPhoneLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Admin ID Section -->
    <TextView
        android:id="@+id/adminIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin ID:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/adminPhone"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/adminId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADM123456"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/adminIdLabel"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
